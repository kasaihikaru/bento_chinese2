<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name, "名前" %><span class="red">(必須)</span><br />
    <%= f.text_field :name, autofocus: true, maxlength: "8" %>
  </div>

  <div class="field">
    <%= f.label :study_ja, "勉強する言語は？" %><span class="red">(必須)</span><br />
    <label><%= f.radio_button :study_ja, false %> 中国語 </label>
    <label><%= f.radio_button :study_ja, true %> 日本語</label>
  </div>

  <div class="field">
    <%= f.label :email %><span class="red">(必須)</span><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><span class="red">(必須)</span>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><span class="red">(必須)</span><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :image, "プロフィール画像(後から追加できます)" %><br />
    <%= f.file_field :image %>
  </div><br>


  <div class="label"><%= f.label :blog, "ブログ、HP(後から追加できます)" %><br />
      <%= f.text_field :blog, placeholder: 'URL' %>
  </div><br>

  <div class="label"><%= f.label :introduction, "自己紹介（後から追加できます）" %><br />
      <%= f.text_area :introduction, placeholder: '学習の目標、意気込みなどを書いてみましょう！', maxlength: '50000' %>
  </div><br>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
